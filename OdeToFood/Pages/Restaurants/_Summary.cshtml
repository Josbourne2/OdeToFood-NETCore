@using OdeToFood.Core
@model Restaurant

<div class="card ">
    <div class="card-header">
        <h3>@Model.Name</h3>

    </div>
    <div class="card-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div class="card-footer">
        <a class="btn btn-lg"
           asp-page="./Detail"
           asp-route-restaurantId="@Model.Id">
            <span class="fa fa-search"></span>

        </a>

        <a class="btn btn-lg"
           asp-page="./Edit"
           asp-route-restaurantId="@Model.Id">
            <span class="fa fa-edit"></span>

        </a>

        <a class="btn btn-lg"
           asp-page="./Delete"
           asp-route-restaurantId="@Model.Id">
            <span class="fa fa-trash"></span>

        </a>

    </div>

</div>